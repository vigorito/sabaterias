<h1>Lista de Produtos</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor compra</th>
      <th>Valor venda</th>
      <th>Ncm</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.valor_compra.real %></td>
        <td><%= produto.valor_venda.real %></td>
        <td><%= produto.ncm %></td>
        <td><%= produto.quantidade %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

